#include<cstdio>
#include<string>
#include<cstring>
int main()
{
    int n,i,s,t;
    char a[1050];
    while(scanf("%d",&n)!=EOF)
    {
    getchar();
    while(n--)
    {
        t=0;
        gets(a);
        s=strlen(a);
        for(i=0;i<s;i++)
            if(a[i]<0)
                t++;
        printf("%d\n",t/2);
    }
    }
    return 0;
}


