#include<iostream>
#include<cstdio>
#include<cstring>
#include<string>
using namespace std;
int main() {
	int n;
	scanf("%d",&n);
	getchar();
	char s[100];
	for (int i=0;i<n;i++) {
		gets(s,100);
		int num=0;
		for (int j=0;j<strlen(s);j++) {
			char c = s[j];
			if (c=='\n') break;
			if (c<0) num++;
		}
		printf("%d\n",num/2);
	}
	return 0;
}



